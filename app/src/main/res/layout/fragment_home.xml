<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sgamerapps.android.fragments.HomeFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <RelativeLayout
                android:id="@+id/smallBanners"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/boader_line"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/quiz"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="3dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/banner" />

                <TextView
                    android:id="@+id/Ad1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ad"
                    android:padding="1dp"
                    android:text="Ad"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/Ad"
                    android:layout_width="wrap_content"
                    android:layout_height="12sp"
                    android:layout_below="@id/quiz"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ad"
                        android:padding="1dp"
                        android:text="Ad"
                        android:textColor="@color/white"
                        android:textSize="7dp"
                        android:textStyle="bold" />


                </RelativeLayout>


                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/quiz"
                    android:layout_marginStart="-10dp"
                    android:layout_marginTop="3dp"
                    android:layout_toEndOf="@id/Ad"
                    android:src="@drawable/quiz" />


                <TextView
                    android:id="@+id/h1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/quiz"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/logo"
                    android:fontFamily="monospace"
                    android:text="Play Quiz &amp; Get Points"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/h2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/h1"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/logo"
                    android:fontFamily="monospace"
                    android:text="Get 5,00,00 coins &amp; More Play IPL Quiz,History \nQuiz, Mega Quiz etc &amp; Get Points instant"
                    android:textColor="#5C5858"
                    android:textSize="10dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_below="@id/h2"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:backgroundTint="#21429C"
                    android:fontFamily="monospace"
                    android:text="Play Games &amp; Get Points"
                    android:textAllCaps="false"
                    android:textSize="18sp" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/smallBanners2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/smallBanners"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/q1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ad"
                    android:padding="1dp"
                    android:text="Ad"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:src="@drawable/gif_1" />

                <TextView
                    android:id="@+id/q2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ad"
                    android:padding="1dp"
                    android:text="Ad"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:src="@drawable/gif_2" />

                <TextView
                    android:id="@+id/q3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ad"
                    android:padding="1dp"
                    android:text="Ad"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:src="@drawable/gif_3" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/smallBanners2">


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/scratchCard"
                    android:layout_width="190dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="20sp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_voilet">

                        <ImageView
                            android:id="@+id/img"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="start|center"
                            android:padding="8dp"
                            android:src="@drawable/hspin" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_below="@id/img"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:fontFamily="monospace"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Scratch &amp; Won"
                            android:textColor="@color/white"
                            android:textSize="20sp" />
                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/spinCard"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="20sp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_dark">

                        <ImageView
                            android:id="@+id/img5"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="start|center"
                            android:padding="8dp"
                            android:src="@drawable/scratch" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/img5"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:fontFamily="monospace"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Spin &amp; Won"
                            android:textColor="@color/white"
                            android:textSize="20sp" />
                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/data2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/data">


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/captchCard"
                    android:layout_width="190dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="20sp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_dark">

                        <ImageView
                            android:id="@+id/img4"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="start|center"
                            android:padding="8dp"
                            android:src="@drawable/captcha" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_below="@id/img4"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:fontFamily="monospace"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Captcha"
                            android:textColor="@color/white"
                            android:textSize="20sp" />
                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/quizCard"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="20sp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_voilet">

                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="start|center"
                            android:padding="8dp"
                            android:src="@drawable/quiz2" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/img2"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:fontFamily="monospace"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Math Quiz"
                            android:textColor="@color/white"
                            android:textSize="20sp" />
                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/rate"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_below="@+id/data2"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/telegram"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bgg"
                    android:gravity="left"
                    android:orientation="horizontal">

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/telegram" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:fontFamily="monospace"
                        android:gravity="left"
                        android:text="Get Update in Telegram join now"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rating"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_below="@id/rate"
                android:layout_centerHorizontal="true"
                android:layout_margin="15sp"
                android:background="@drawable/bgg"
                android:gravity="center"
                android:orientation="horizontal">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/star" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:fontFamily="monospace"
                    android:gravity="left"
                    android:text="Give us a feedback with Rate Us"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/invite"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_below="@+id/rating"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_margin="15sp"
                android:layout_marginBottom="20sp"
                android:background="@drawable/bgg"
                android:orientation="horizontal">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/share" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:fontFamily="monospace"
                    android:gravity="left"
                    android:padding="5dp"
                    android:text="Refer Your Friends to get instant"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/contact"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_below="@+id/invite"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_margin="15sp"
                android:layout_marginBottom="20sp"
                android:background="@drawable/bgg"
                android:orientation="horizontal">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/contact" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:fontFamily="monospace"
                    android:gravity="left"
                    android:padding="5dp"
                    android:text="Facing any issue contact us"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold" />


            </LinearLayout>


        </RelativeLayout>

    </ScrollView>

</FrameLayout>